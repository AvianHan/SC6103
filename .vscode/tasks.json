{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "C:/MinGW/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I", "F:/anzhuangbao/Wnmp-4.2.0/mariadb-bins/default/include",  // 头文件路径
                "-L", "F:/anzhuangbao/Wnmp-4.2.0/mariadb-bins/default/lib",      // 库文件路径
                "-lmariadb"                               // 链接MariaDB客户端库
            ],
            "options": {
                "cwd": "C:/MinGW/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}
